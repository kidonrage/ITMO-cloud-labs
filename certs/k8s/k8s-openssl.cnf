prompt             = no
default_md         = sha256
req_extensions     = req_ext
distinguished_name = dn

[ dn ]
C  = RU
ST = SPB
L  = SPB
O  = ITMO-LABS
OU = DevOps
CN = *.k8s.labs.itmo.loc

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = *.k8s.labs.itmo.loc
DNS.2 = k8s.labs.itmo.loc
